@using EdFi.Ods.AdminApp.Web.Helpers
@using EdFi.Ods.AdminApp.Web.Models.ViewModels.Reports
@model ReportsIndexModel

@{
    ViewBag.Title = "Ods Instance Reports | Students By Attribute";
    Layout = "~/Views/Shared/_Settings_Production.cshtml";
}

@Html.NavPills(Url, Model.OdsInstanceSettingsTabEnumerations)

<div class="padding-bottom-10" align="center">
    <h2>@Model.StudentEconomicSituationReport.LocalEducationAgencyName</h2>
</div>

<h3>Students By Attribute</h3>
@if (Model.StudentEconomicSituationReport.TotalStudentCount == 0)
{
<em class="padding-top">There is no student data to display</em>
}
else
{
<table class="table table-condensed table-left-border">
    <thead>
        <tr>
            <th>Other Student Information</th>
            <th>Students</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var economicCategory in Model.StudentEconomicSituationReport.GetStudentEconomicSummary())
        {

        <tr>
            <td>@economicCategory.Description</td>
            <td>@economicCategory.PercentOfTotal.ToString("P2")</td>
        </tr>
        }
    </tbody>
</table>
}

<a href="@Url.Action(" SelectDistrict", "OdsInstanceSettings" , new {id=Model.StudentEconomicSituationReport.LocalEducationAgencyId})">@Html.Button("Back to Reports")</a>
